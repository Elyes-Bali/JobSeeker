{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <h1>Tableau de Bord</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Statistiques par Priorité</h2>
            <ul>
                <li>Urgent : {{ statistics.priorities.urgent }}%</li>
                <li>Moyen : {{ statistics.priorities.moyen }}%</li>
                <li>Bas : {{ statistics.priorities.bas }}%</li>
            </ul>
        </div>

        <div class="col-md-6">
            <h2>Statistiques par Catégorie</h2>
            <ul>
                <li>Problèmes de Paiement : {{ statistics.categories.paiement }}%</li>
                <li>Conduite Inappropriée : {{ statistics.categories.conduite }}%</li>
                <li>Passager Non Ponctuel : {{ statistics.categories.ponctualité }}%</li>
                <li>Autres : {{ statistics.categories.autres }}%</li>
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Total Réclamations : {{ statistics.totalReclamations }}</h2>
        </div>
    </div>
{% endblock %}
