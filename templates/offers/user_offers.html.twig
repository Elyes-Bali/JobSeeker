{% extends 'base.html.twig' %}

{% block title %}My Applied Offers{% endblock %}

{% block body %}
<div class="container mt-5 vh-100">
    <h1 class="mb-4">Offers I've Applied For</h1>

    {% if offers is empty %}
        <div class="alert alert-info">
            <p>You haven't applied for any offers yet.</p>
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Offer ID</th>
                        <th>Speciality</th>
                        <th>City</th>
                        <th>Salary</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for offer in offers %}
                        <tr>
                            <td>{{ offer.id }}</td>
                            <td>{{ offer.specialite }}</td>
                            <td>{{ offer.villeTravail }}</td>
                            <td>{{ offer.salaire }}</td>
                            <td>
                                {% if offer.selectedApplayerId == app.user.id %}
                                    <span class="">You have been selected for this offer!</span>
                                {% else %}
                                    <span class="badge badge-warning">Not selected yet</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
